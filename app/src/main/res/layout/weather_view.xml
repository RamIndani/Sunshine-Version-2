<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrentTemperature"
        android:text="@string/current_temp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="@dimen/large_text_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMinimumTemperature"
        android:text="@string/minimum_temperature"
        android:layout_below="@id/tvCurrentTemperature"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="@dimen/medium_text_size"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_launcher"
        android:layout_toRightOf="@id/tvCurrentTemperature"
        android:id="@+id/ivWeatherImage"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivWeatherImage"
        android:text="@string/cloudy"
        android:layout_toRightOf="@id/tvCurrentTemperature"
        />

</RelativeLayout>